# ============================================
# BINANCE API CREDENTIALS (OPCIONAL)
# ============================================
# Para acceso público no se necesitan keys
# Para funciones avanzadas (trading), descomenta:
# BINANCE_API_KEY=your_api_key_here
# BINANCE_API_SECRET=your_api_secret_here

# ============================================
# CONFIGURACIÓN DEL SCANNER
# ============================================
# Umbral de volumen relativo (por defecto 5x)
RVOL_THRESHOLD=5.0

# Período para calcular volumen promedio (en horas)
VOLUME_LOOKBACK_HOURS=24

# Número mínimo de velas para análisis
MIN_CANDLES_REQUIRED=100

# ============================================
# ALERTAS Y NOTIFICACIONES
# ============================================
# Telegram Bot (Opcional - para futuras alertas)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# ============================================
# CONFIGURACIÓN AVANZADA
# ============================================
# Intervalo de escaneo (en segundos)
SCAN_INTERVAL=60

# Mercados a escanear (separados por coma)
# USDT: pares contra Tether
QUOTE_CURRENCIES=USDT

# Mínimo volumen 24h en USD para considerar un par
MIN_VOLUME_USD=100000

# Modo debug
DEBUG=False
